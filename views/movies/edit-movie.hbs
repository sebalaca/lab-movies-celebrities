><div>
    <a href="/">Home</a>

    <h2> Edit {{movie.title}}</h2>

    <div>
        <form action="/movies/{{movie._id}}/edit" method="post">

            <label for="title"></label>
            <input type="text" id="title" placeholder="Title" name="title" value="{{movie.title}}">

            <label for="genre"></label>
            <input type="text" id="genre" placeholder="Genre" name="genre" value="{{movie.genre}}">

            <label for="plot"></label>
            <input type="text" id="plot" placeholder="Plot" name="plot" value="{{movie.plot}}">

            <label for="cast">Cast</label>
            <select name="cast" id="cast" multiple>
                {{#each celeb}}
                <option value="{{id}}">{{name}}</option>
                {{/each}}
            </select>
            <button type="submit" class="btn btn-dark">Edit</button>
        </form>
    </div>
</div>